# Database
MONGODB_URI=mongodb://localhost:27017/gym-website
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gym-website

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Admin Credentials
ADMIN_EMAIL=admin@wolverinesfitness.com
ADMIN_PASSWORD=admin123

# Cloudinary (Optional - for cloud image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads